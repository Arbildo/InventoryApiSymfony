{% extends 'base.html.twig' %}

{% block title %}TblProducto index{% endblock %}

{% block body %}
    <h1>TblProducto index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>IdProducto</th>
                <th>Nombre</th>
                <th>Codigo</th>
                <th>Descripcion</th>
                <th>Imagen</th>
                <th>Estado</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for tbl_producto in tbl_productos %}
            <tr>
                <td>{{ tbl_producto.idProducto }}</td>
                <td>{{ tbl_producto.nombre }}</td>
                <td>{{ tbl_producto.codigo }}</td>
                <td>{{ tbl_producto.descripcion }}</td>
                <td>{{ tbl_producto.imagen }}</td>
                <td>{{ tbl_producto.estado }}</td>
                <td>
                    <a href="{{ path('tbl_producto_show', {'idProducto': tbl_producto.idProducto}) }}">show</a>
                    <a href="{{ path('tbl_producto_edit', {'idProducto': tbl_producto.idProducto}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('tbl_producto_new') }}">Create new</a>
{% endblock %}
