<form method="post" action="{{ path('tbl_producto_delete', {'idProducto': tbl_producto.idProducto}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ tbl_producto.idProducto) }}">
    <button class="btn">Delete</button>
</form>
